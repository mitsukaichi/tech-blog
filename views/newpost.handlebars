<div class = 'blogs'>
    {{#if loggedIn}}
    <section class="card">
        <form class="add-blog">
        <input class='new-blog-title' type="text" value="Blog title"> <br>
        <textarea class='new-blog-content' type="text">Blog body</textarea>
        <button id="submit-new-post" class="btn-style">POST</button>
        </form>
    </section>
    {{else}}
    <p><a href="/login">Login</a> to post a new blog </p>
    {{/if}}
</div>

<script src="../js/newpost.js"></script>